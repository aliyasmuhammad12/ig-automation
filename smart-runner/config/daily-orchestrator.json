  "naturalExits": {
    "caughtUpExit": true,
    "capReachedExit": true,
    "contentStallExit": true,
    "boredomExit": true,
    "spinnerTimeout": 4000,
    "suggestedStreakMax": 3
  },
  "telemetry": {
    "logPerPost": true,
    "requiredFields": [
      "post_idx", "source", "dwell_ms", "intent", "like_attempted", 
      "like_success", "likeP_before", "likeP_after", "reason_blocked", 
